{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-async-promise-executor": ["never"],
    "no-useless-catch": ["never"],
    "require-atomic-updates": ["never"],
    "no-misleading-character-class": ["never"]
  },
  "globals": {
    "use": false,
    "module": false
  }
}
